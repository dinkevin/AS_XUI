<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义的 RadioButton 样式 -->
    <declare-styleable name="xui_radio_button_style">
        <attr name="checked_drawable" format="reference"/>
        <attr name="unchecked_drawable" format="reference"/>
        <attr name="notice_drawable" format="reference"/>
        <attr name="checked_text_color" format="color"/>
        <attr name="unchecked_text_color" format="color"/>
        <attr name="drawable_position" format="integer">
            <enum name="top" value="0"/>
            <enum name="right" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="left" value="3"/>
        </attr>
    </declare-styleable>
</resources>
